{#
/**
 * Template Name: Blog Home
 * Description: Template for the blog posts index page
 * Context: posts (array of Timber\Post objects)
 */
#}
{% extends "layouts/base.twig" %}

{% block content %}
<main class="flex-grow">
	<div class="blog-home">
		{# Blog posts listing #}
		{% for post in posts %}
			{% include 'partials/post-card.twig' with { post: post } %}
		{% endfor %}
	</div>
</main>
{% endblock %}
