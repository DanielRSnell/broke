<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ prototype.title }} - Prototype Viewer</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #0a0a0a;
            color: #fff;
            overflow: hidden;
        }

        .viewer-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .viewer-header {
            background: #111;
            border-bottom: 1px solid #222;
            padding: 0.75rem 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .viewer-title {
            font-size: 1rem;
            font-weight: 600;
            flex: 1;
            min-width: 150px;
        }

        .viewer-controls {
            display: flex;
            gap: 0.5rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .device-selector {
            display: flex;
            gap: 0.25rem;
            background: #1a1a1a;
            padding: 0.25rem;
            border-radius: 0.375rem;
        }

        .device-btn {
            padding: 0.375rem 0.75rem;
            background: transparent;
            border: none;
            color: #999;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .device-btn:hover {
            color: #fff;
            background: #222;
        }

        .device-btn.active {
            background: #333;
            color: #fff;
        }

        .btn {
            padding: 0.5rem 1rem;
            background: #222;
            border: 1px solid #333;
            color: #fff;
            border-radius: 0.375rem;
            font-size: 0.875rem;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.2s;
        }

        .btn:hover {
            background: #333;
            border-color: #444;
        }

        .viewer-frame {
            flex: 1;
            position: relative;
            background: #1a1a1a;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: auto;
        }

        .viewer-iframe-wrapper {
            width: 100%;
            height: 100%;
            background: #fff;
            transition: all 0.3s ease;
            position: relative;
        }

        .viewer-iframe-wrapper.mobile {
            width: 375px;
            height: 667px;
            max-width: 100%;
            max-height: 100%;
            border-radius: 0.5rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        }

        .viewer-iframe-wrapper.tablet {
            width: 768px;
            height: 1024px;
            max-width: 100%;
            max-height: 100%;
            border-radius: 0.5rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        }

        .viewer-iframe {
            width: 100%;
            height: 100%;
            border: none;
            pointer-events: none;
        }

        .click-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 10;
        }

        @media (max-width: 640px) {
            .viewer-header {
                padding: 0.5rem;
            }

            .viewer-title {
                font-size: 0.875rem;
            }

            .device-selector {
                display: none;
            }

            .btn {
                padding: 0.375rem 0.75rem;
                font-size: 0.75rem;
            }
        }
    </style>
</head>
<body>
    <div class="viewer-container">
        <div class="viewer-header">
            <div class="viewer-title">{{ prototype.title }}</div>
            <div class="viewer-controls">
                <div class="device-selector">
                    <button class="device-btn active" data-device="desktop">Desktop</button>
                    <button class="device-btn" data-device="tablet">Tablet</button>
                    <button class="device-btn" data-device="mobile">Mobile</button>
                </div>
                <a href="/portfolio" class="btn">
                    Back to Portfolio
                </a>
            </div>
        </div>
        <div class="viewer-frame">
            <div class="viewer-iframe-wrapper" id="iframeWrapper">
                <iframe
                    class="viewer-iframe"
                    id="prototypeFrame"
                    srcdoc="{{ prototype.srcdoc|e('html_attr') }}"
                    sandbox="allow-scripts allow-same-origin allow-forms allow-popups allow-modals"
                ></iframe>
                <div class="click-overlay"></div>
            </div>
        </div>
    </div>

    <script>
        // Device switcher
        const deviceBtns = document.querySelectorAll('.device-btn');
        const iframeWrapper = document.getElementById('iframeWrapper');

        deviceBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                deviceBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');

                const device = btn.dataset.device;
                iframeWrapper.className = 'viewer-iframe-wrapper';

                if (device !== 'desktop') {
                    iframeWrapper.classList.add(device);
                }
            });
        });
    </script>
</body>
</html>
